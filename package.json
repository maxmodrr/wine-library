{
  "name": "wine-library",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://maxmodrr.github.io/wine-library",
  "lint-staged": {
    "*.{ts,tsx}": "npm run fix-style"
  },
  "scripts": {
    "dev": "vite --open",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ignore-pattern .gitignore --fix",
